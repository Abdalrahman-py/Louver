<resources>
    <style name="Theme.Louver" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/louver_black</item>
        <item name="colorOnPrimary">@color/louver_white</item>
        <item name="colorSecondary">@color/louver_accent</item>
        <item name="colorOnSecondary">@color/louver_white</item>
        <item name="colorError">@color/louver_error</item>
        <item name="colorOnError">@color/louver_white</item>
        <item name="android:colorBackground">@color/louver_white</item>
        <item name="colorSurface">@color/louver_white</item>
        <item name="colorSurfaceVariant">@color/louver_surface</item>
        <item name="colorOnSurface">@color/louver_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/louver_text_secondary</item>

        <item name="materialToolbarStyle">@style/Widget.Louver.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.Louver.BottomNavigation</item>
        <item name="navigationViewStyle">@style/Widget.Louver.NavigationView</item>
        <item name="materialCardViewStyle">@style/Widget.Louver.Card</item>
        <item name="materialButtonStyle">@style/Widget.Louver.Button.Primary</item>
        <item name="textInputStyle">@style/Widget.Louver.TextInputLayout</item>
        <item name="floatingActionButtonStyle">@style/Widget.Louver.Fab</item>
    </style>

    <style name="Theme.Louver.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/louver_white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_louver_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Louver</item>
    </style>
</resources>
