<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/louver_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:textAppearance="@style/TextAppearance.Louver.Title"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Summary"
        android:textAppearance="@style/TextAppearance.Louver.Section"
        android:layout_marginBottom="12dp" />

    <TextView android:id="@+id/tv_pickup_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:textAppearance="@style/TextAppearance.Louver.Body"/>
    <TextView android:id="@+id/tv_return_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:textAppearance="@style/TextAppearance.Louver.Body"/>
    <TextView android:id="@+id/tv_days_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:textAppearance="@style/TextAppearance.Louver.Body"/>
    <TextView android:id="@+id/tv_total_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:textAppearance="@style/TextAppearance.Louver.Section"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_final"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_booking"
            style="@style/Widget.Louver.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <ProgressBar android:id="@+id/progress_confirm" android:layout_width="match_parent" android:layout_height="wrap_content" android:visibility="gone" />
    <TextView android:id="@+id/tv_confirm_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:textAppearance="@style/TextAppearance.Louver.Body" />

</LinearLayout>
