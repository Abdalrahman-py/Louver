<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/louver_white">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_pickup"
        style="@style/Widget.Louver.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select pickup date &amp; time" />

    <TextView
        android:id="@+id/tv_pickup_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Pickup not set"
        android:textAppearance="@style/TextAppearance.Louver.Body" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_return"
        style="@style/Widget.Louver.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select return date &amp; time" />

    <TextView
        android:id="@+id/tv_return_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Return not set"
        android:textAppearance="@style/TextAppearance.Louver.Body" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:text="Confirm booking" />

    <ProgressBar
        android:id="@+id/progress_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.Louver.Body" />

</LinearLayout>
