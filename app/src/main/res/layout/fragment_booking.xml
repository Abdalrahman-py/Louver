<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_select_pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Pickup Date &amp; Time" />

    <TextView
        android:id="@+id/tv_pickup_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup not set"
        android:textSize="12sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_select_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Return Date &amp; Time" />

    <TextView
        android:id="@+id/tv_return_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return not set"
        android:textSize="12sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_confirm_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:layout_marginBottom="16dp"
        android:enabled="false" />

    <ProgressBar
        android:id="@+id/progress_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
