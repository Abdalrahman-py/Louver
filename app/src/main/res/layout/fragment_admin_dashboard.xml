<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_dashboard_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnAddCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_btn_add_car"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnManageCars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_btn_manage_cars"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnViewBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_btn_view_bookings" />

</LinearLayout>

