<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/louver_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/admin_dashboard_title"
        android:textAppearance="@style/TextAppearance.Louver.Title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageCars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/admin_btn_manage_cars" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewBookings"
        style="@style/Widget.Louver.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_btn_view_bookings" />

</LinearLayout>
