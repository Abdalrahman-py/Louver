<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_dashboard_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- Stat cards row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTotalCars"
                style="@style/Widget.Louver.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:padding="16dp" android:gravity="center">
                    <TextView android:id="@+id/tvTotalCars"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textSize="28sp" android:textStyle="bold"
                        android:textColor="@color/color_louver_accent"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/admin_stat_cars"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTotalUsers"
                style="@style/Widget.Louver.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:padding="16dp" android:gravity="center">
                    <TextView android:id="@+id/tvTotalUsers"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textSize="28sp" android:textStyle="bold"
                        android:textColor="@color/color_louver_accent"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/admin_stat_users"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Stat cards row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardActiveBookings"
                style="@style/Widget.Louver.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:padding="16dp" android:gravity="center">
                    <TextView android:id="@+id/tvActiveBookings"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textSize="28sp" android:textStyle="bold"
                        android:textColor="#16A34A"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/admin_stat_active"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPendingBookings"
                style="@style/Widget.Louver.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:padding="16dp" android:gravity="center">
                    <TextView android:id="@+id/tvPendingBookings"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textSize="28sp" android:textStyle="bold"
                        android:textColor="#D97706"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/admin_stat_pending"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Navigation buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManageCars"
            style="@style/AppButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/admin_btn_manage_cars"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewBookings"
            style="@style/AppButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/admin_btn_view_bookings"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewUsers"
            style="@style/AppButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_btn_view_users"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
